<div class="container p-4">
    <row>
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR SUCULENTA</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: RikaRika" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="sciname" class="input-group-text">Nombre Cientifico</label>
                            <input class="form-control" type="text" name="sciname" id="sciname" placeholder="Ejemplo: RikaRikus" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="costo" class="input-group-text">Costo</label>
                            <input class="form-control" type="number" name="costo" id="costo"  placeholder="0" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </row>
</div>