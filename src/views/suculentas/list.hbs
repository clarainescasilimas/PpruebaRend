<div class="container">
    <div class="row mt-5">
        <h3 class= "text-center text-uppercase" p-2>LISTA DE SUCULENTAS</h3> 
        {{#if suculentas}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Nombre</th>
                    <th scope="col">Nombre Cientifico</th>
                    <th scope="col">Costo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each suculentas}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{sciname}}</td>
                    <td>{{costo}}</td>
                    <td>
                        <div class="btn btn-group">
                            <a href="/edit/{{id}}" class="btn btn-success p-2">
                            <img class="fa-duotone fa-pencil" style="width:25px;height:25px;display:block" src="https://static.vecteezy.com/system/resources/thumbnails/009/663/676/small_2x/pencil-icon-transparent-free-png.png"></a>
                            <a href="/delete/{{id}}" class="btn btn-danger p-2">
                            <img class="fa-duotone fa-trash" style="width:23px;height:23px;display:block" src="https://cdn-icons-png.flaticon.com/512/4021/4021663.png"></a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="4">REGISTRO DE SUCULENTAS</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-centered mx-auto" style="width: 350px">
            <div class="card-header">
                <h3>Crea una planta</h3>
            </div>
            <div class="card-body">
                <p>Presiona para crear</p>
                <a href="#" class="btn btn-primary">CREAR</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>