<div class="container p-4">
    <row>
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR SUCULENTA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{suculenta.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="name" id="name" value "{{suculenta.name}}" 
                            placeholder="Ejemplo: Rosa negra" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="sciname" class="input-group-text">Nombre Cientifico</label>
                            <input class="form-control" type="text" name="sciname" id="sciname" 
                            placeholder="Ejemplo: Aeonium arboreum" value "{{suculenta.sciname}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="costo" class="input-group-text">Costo</label>
                            <input class="form-control" type="number" name="costo" id="costo" value "{{suculenta.costo}}"
                            placeholder="0" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </row>
</div>